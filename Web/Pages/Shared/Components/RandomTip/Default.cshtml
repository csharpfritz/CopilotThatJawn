@model Web.Models.TipModel

@if (Model != null)
{
    <div class="card shadow-sm hover-card mb-4">
        <div class="card-header bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <span class="badge bg-warning fw-normal text-dark">Random Tip</span>
                <span class="small text-muted">@Model.PublishedDate.ToString("MMM dd, yyyy")</span>
            </div>
        </div>
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text text-truncate-3">@Model.Description</p>
            <div class="d-flex gap-1 mb-2">
                @foreach (var tag in Model.Tags.Take(2))
                {
                    <span class="badge bg-light text-dark">#@tag</span>
                }
                @if (Model.Tags.Count > 2)
                {
                    <span class="badge bg-light text-dark">+@(Model.Tags.Count - 2)</span>
                }
            </div>
            <div class="d-flex justify-content-between align-items-center mt-3">
                <span class="text-muted"><i class="bi bi-clock"></i> @Model.ReadingTimeMinutes min read</span>
                <a asp-page="/Tips/Details" asp-route-slug="@Model.UrlSlug" class="btn btn-sm btn-outline-primary">Read More</a>
            </div>
        </div>
    </div>
}
else
{
    <div class="card shadow-sm hover-card mb-4">
        <div class="card-body text-center py-4">
            <i class="bi bi-question-circle text-muted display-4 mb-3"></i>
            <h5>No tips available</h5>
            <p class="text-muted">Check back later for more tips and tricks.</p>
        </div>
    </div>
}
